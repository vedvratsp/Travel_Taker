<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/draw_layout"
    xmlns:uber="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Login.Home">



    <ImageButton
        android:id="@+id/logOut"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="350dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="35dp"
        app:srcCompat="@drawable/logout"
        android:contentDescription="TODO" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/weather"
                android:layout_width="380dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                uber:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/hotel1"
                        android:layout_width="380dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:background="#FFFFFF"
                        android:src="@drawable/hf" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Hotel and Flight Booking"
                        android:textAlignment="center"
                        android:textSize="20dp" />



                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/Todo"
                android:layout_width="380dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/place"
                        android:layout_width="380dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:background="#FFFFFF"
                        android:src="@drawable/plc" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Places"
                        android:textAlignment="center"
                        android:textSize="20dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="149dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/news_btn"
                android:layout_width="380dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/UtilityWidget"
                        android:layout_width="380dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:background="#FFFFFF"
                        android:src="@drawable/wdgt" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Widgets"
            android:textAlignment="center"
            android:textSize="20dp" />

    </LinearLayout>

    <com.uber.sdk.android.rides.RideRequestButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="45dp"
        android:minHeight="30dp"
        android:paddingBottom="0dp"
        app:ub__style="black"
        tools:visibility="visible" />

